<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--首页数据布局-->

    <ImageView
        android:id="@+id/pic_item_sift"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/title_item_sift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pic_item_sift"
        android:layout_centerHorizontal="true"
        android:text="title"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_item_sift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nickname_item_sift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="inckname"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="15dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/nickname_item_sift"
            android:background="@android:color/black">

        </View>

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/view"
            android:background="@mipmap/ic_topic_list_item_multi_likes" />

        <TextView
            android:id="@+id/likes_item_sift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_like"
            android:text="likes"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/view"
            android:background="@mipmap/ic_topic_list_item_multi_views"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/views_item_sift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_views"
            android:text="views"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/views_item_sift"
            android:background="@mipmap/ic_topic_list_item_multi_comments" />

        <TextView
            android:id="@+id/comments_item_sift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_comments"
            android:text="comments"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>